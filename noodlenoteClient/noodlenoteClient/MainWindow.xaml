<mah:MetroWindow x:Class="noodlenoteClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:noodlenoteClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="Button_Ping" HorizontalAlignment="Left" Click="Button_Ping_Click">Ping</Button>
            <Button x:Name="Button_Init" HorizontalAlignment="Left" Click="Button_Init_Click">Init</Button>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!--BookList-->
            <ListBox Name="ListBox_BookList"  SelectionChanged="BookList_SelectionChanged" >

            </ListBox>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <!--BookInfo-->
                <StackPanel Grid.Row="0">
                    <Label Name="Lable_BookTitle">Xxx</Label>
                    <Label Name="Lable_NoteTitle">Xxx</Label>
                </StackPanel>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition  Width="150"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!--Note-->
                    <TextBox x:Name="TextBox_Note" Grid.Column="1">

                    </TextBox>
                    <!--NoteList-->
                    <ListBox Name="ListBox_NoteList"  SelectionChanged="ListBox_NoteList_SelectionChanged" >

                    </ListBox>
                </Grid>
            </Grid>

        </Grid>
    </Grid>
</mah:MetroWindow>
